---
import Layout from '../../layouts/Layout.astro';
import { collections } from '../../data/collections';
import { Image } from 'astro:assets';
---

<Layout title="Collections">
  <div class="page-container">
    <div class="section-header">
      <h1 class="page-title">Collections</h1>
      <p class="page-subtitle">
        Curated sets of photos from my travels and projects. Each collection tells a unique story.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {collections.map((collection) => (
        <a href={`/collections/${collection.id}`} class="group cursor-pointer block">
          <div class="relative aspect-[4/5] overflow-hidden rounded-lg bg-gray-200">
            <img 
              src={collection.image} 
              alt={collection.title}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-black/20 group-hover:bg-black/40 transition-colors duration-500"></div>
            <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
              <p class="text-sm font-medium mb-1 opacity-80">{collection.count} photos</p>
              <h3 class="text-2xl font-bold">{collection.title}</h3>
            </div>
          </div>
          <p class="mt-4 text-gray-600 line-clamp-2">{collection.description}</p>
        </a>
      ))}
    </div>
  </div>
</Layout>
