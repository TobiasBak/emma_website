  },
  {
    id: 2,
    title: 'Modern Kitchen',
    category: 'Renovation',
    image: 'https://images.unsplash.com/photo-1556911220-e15b29be8c8f?q=80&w=600&auto=format&fit=crop',
  },
  {
    id: 3,
    title: 'Cozy Bedroom',
    category: 'Styling',
    image: 'https://images.unsplash.com/photo-1522771753035-0a1533890654?q=80&w=600&auto=format&fit=crop',
  },
  {
    id: 4,
    title: 'Scandinavian Workspace',
    category: 'Office',
