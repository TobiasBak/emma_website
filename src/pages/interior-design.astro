---

<Layout title="Interior Design">
  <div class="page-container">
    <div class="section-header">
      <h1 class="page-title">Interior Design Portfolio</h1>
      <p class="page-subtitle">
        Creating spaces that inspire and comfort. A collection of my work in residential and commercial styling.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {designs.map((design) => (
        <div class="design-card group">
          <div class="relative h-80 overflow-hidden">
             <img 
              src={design.image} 
              alt={design.title}
              class="w-full h-full object-cover transform hover:scale-105 transition-transform duration-700"
            />
          </div>
          <div class="p-6">
            <p class="design-card-category">{design.category}</p>
            <h3 class="design-card-title">{design.title}</h3>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>