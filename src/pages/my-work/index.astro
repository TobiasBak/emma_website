---
import Layout from '../../layouts/Layout.astro';
import { houses } from '../../data/houses';
---

<Layout title="Real Estate Photography">
  <div class="page-container">
    <div class="section-header">
      <h1 class="page-title">My Work</h1>
      <p class="page-subtitle">
        Showcasing professional real estate photography that makes properties shine. Bringing spaces to life through exceptional imagery.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {houses.map((house) => (
        <a href={`/my-work/${house.id}`} class="block group">
            <div class="design-card">
            <div class="relative h-80 overflow-hidden">
                <img 
                src={house.image} 
                alt={house.title}
                class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
                />

            </div>
            <div class="p-6">
                <div class="flex justify-between items-start mb-2">
                    <p class="design-card-category">{house.category}</p>
                    <p class="text-gray-500 text-sm">{house.location}</p>
                </div>
                <h3 class="design-card-title group-hover:text-primary transition-colors">{house.title}</h3>
                <p class="text-gray-600 mt-2 line-clamp-2">{house.description}</p>
            </div>
            </div>
        </a>
      ))}
    </div>
  </div>
</Layout>
