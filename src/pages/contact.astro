---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact">
  <div class="max-w-3xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="section-header">
      <h1 class="page-title">Get in Touch</h1>
      <p class="page-subtitle">
        I'd love to hear from you. Whether you have a question about my travels, interior design inquiries, or just want to say hi.
      </p>
    </div>

    <div class="contact-form-container">
      <div class="px-4 py-5 sm:p-6">
        <form class="space-y-6">
          <div>
            <label for="name" class="input-label">Name</label>
            <div class="mt-1">
              <input type="text" name="name" id="name" class="input-field" placeholder="Your Name">
            </div>
          </div>

          <div>
            <label for="email" class="input-label">Email</label>
            <div class="mt-1">
              <input type="email" name="email" id="email" class="input-field" placeholder="you@example.com">
            </div>
          </div>

          <div>
            <label for="subject" class="input-label">Subject</label>
            <div class="mt-1">
               <input type="text" name="subject" id="subject" class="input-field" placeholder="Project Inquiry">
            </div>
          </div>

          <div>
            <label for="message" class="input-label">Message</label>
            <div class="mt-1">
              <textarea id="message" name="message" rows="4" class="input-field" placeholder="How can I help you?"></textarea>
            </div>
          </div>

          <div>
            <button type="submit" class="btn-primary">
              Send Message
            </button>
          </div>
        </form>
      </div>
    </div>
    
    <div class="mt-12 text-center">
        <p class="text-text-muted">Or email me directly at</p>
        <a href="mailto:emma@example.com" class="btn-secondary-link">emma@example.com</a>
    </div>
  </div>
</Layout>